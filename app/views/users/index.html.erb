<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-offset-5 well name_display">
      <h1>Everyone</h1>
      <h2>Score: <%= @users_score %></h2>
      <h2><span class="glyphicon glyphicon-heart"></span> <%= @users_likes %></h2>
    </div>
  </div>
</div>

<div class="users">
  <div class="container">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-md-3">
          <% if user.id == current_user.id %>
            <%= link_to "ME!", home_path %>
          <% else %>
            <%= link_to user.fname, user_path(user) %>
          <% end %>
        </div>
        <div class="col-md-3">
          Score: <%= user.score %>
        </div>
        <div class="col-md-3">
          Tasks: <%= user.tasks.size %>
        </div>
        <div class="col-md-3">
          <span class="glyphicon glyphicon-heart"></span> <%= user.likes %>
        </div>
      </div>
    <% end %>
  </div>
</div>
