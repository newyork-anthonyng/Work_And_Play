<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <h1><%= @user.fname %></h1>
      <h2>Score: <%= @user.score %></h2>
      <h2>Likes: <%= @user.likes %></h2>
    </div>
  </div>
</div>


