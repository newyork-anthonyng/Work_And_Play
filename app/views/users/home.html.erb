  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3">
      <h2>Play</h2>
      <%= render partial: 'tasks/form', locals: { :category => "play" } %>
      <%= render partial: 'tasks/show', locals: { :object => @play_tasks } %>
    </div>
    <div class="col-md-4">
      <h2>Work</h2>
      <%= render partial: 'tasks/form', locals: { category: "work" } %>
      <%= render partial: 'tasks/show', locals: { :object => @work_tasks } %>
