<ul>
  <% object.each do |task| %>
    <li>
      <% if task.completed %>
        <strong><%= task.description %></strong><br>
        Points: <%= task.points %><br>

        <%= render partial: "tasks/tags", locals: { :task => task } %>
        <br>

        <%= link_to "Edit", edit_user_task_path(task.user, task) %>,
        <%= link_to "Delete", user_task_path(task.user, task), method: :delete %>

      <% else %>
        Not completed.
        <%= task.description %><br>
        Points: <%= task.points %><br>

        <%= render partial: "tasks/tags", locals: { :task => task } %>
          <br>

        <%= link_to "Delete", user_task_path(task.user, task), method: :delete %>
        <%= link_to "Edit", edit_user_task_path(task.user, task) %>,
        <%= link_to "Mark Complete", complete_user_task_path(task.user, task) %>

      <% end %>

      <%= "Likes: #{task.votes_for.size}" %>
      <br>
      <% if !is_current_user?(task.user) %>
        <%= link_to "Like", like_user_task_path(task.user, task) %><br>
      <% end %>
    </li>
  <% end %>
</ul>
