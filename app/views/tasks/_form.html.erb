<%= form_for([@user, @user.tasks.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :points %><br>
    <%= f.text_field :points %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
