<h1><%= @task.description %></h1>

<%= form_for [@task.user, @task] do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>

  <p><%= link_to "Delete", user_task_path(@task.user, @task), method: :delete %></p>
  <p><%= f.submit "Update" %></p>
<% end %>
<%= link_to "<< Back", user_path(@task.user) %>
